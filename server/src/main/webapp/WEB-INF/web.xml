<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>SPDB Application</display-name>

	<servlet>
		<servlet-name>DrivingRouteServlet</servlet-name>
		<servlet-class>pl.edu.pw.elka.spdb.servlet.DrivingRouteServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>TransitRouteServlet</servlet-name>
        <servlet-class>pl.edu.pw.elka.spdb.servlet.TransitRouteServlet</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>DrivingRouteServlet</servlet-name>
		<url-pattern>/driving/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>TransitRouteServlet</servlet-name>
        <url-pattern>/transit/*</url-pattern>
    </servlet-mapping>
</web-app>
